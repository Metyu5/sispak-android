<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity"
    android:padding="0dp"
    android:background="@color/background">

    <ImageView
        android:id="@+id/img1"
        android:layout_width="60dp"
        android:layout_height="55dp"
        app:srcCompat="?attr/homeAsUpIndicator"
        app:tint="@color/white"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/img5"
        android:layout_width="356dp"
        android:layout_height="336dp"
        app:srcCompat="@drawable/gambar4"
        android:layout_marginTop="150dp"
        android:layout_marginStart="145dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/txt1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Selamat Datang !"
        android:fontFamily="@font/titilliumweb_semibold"
        android:textColor="@color/white"
        android:textSize="38sp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="49dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/img1" />

    <ImageView
        android:id="@+id/img2"
        android:layout_width="83dp"
        android:layout_height="90dp"
        app:srcCompat="@drawable/gambar2"
        app:layout_constraintTop_toBottomOf="@id/txt1"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginStart="49dp" />

    <TextView
        android:id="@+id/txt2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Daftar Sekarang, Dan"
        android:fontFamily="@font/titilliumweb_regular"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:layout_constraintTop_toTopOf="@id/img2"
        app:layout_constraintStart_toEndOf="@id/img2"
        android:layout_marginStart="50dp" />

    <TextView
        android:id="@+id/txt3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mulai Menjaga Kesehatan"
        android:fontFamily="@font/titilliumweb_regular"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:layout_constraintTop_toTopOf="@id/img2"
        app:layout_constraintStart_toEndOf="@id/img2"
        android:layout_marginStart="18dp"
        android:layout_marginTop="25dp" />

    <TextView
        android:id="@+id/txt4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Betta"
        android:fontFamily="@font/titilliumweb_bold"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:layout_constraintTop_toTopOf="@id/img2"
        app:layout_constraintStart_toEndOf="@id/img2"
        android:layout_marginStart="90dp"
        android:layout_marginTop="50dp" />

    <TextView
        android:id="@+id/txt5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fish Anda."
        android:fontFamily="@font/titilliumweb_regular"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:layout_constraintTop_toTopOf="@id/img2"
        app:layout_constraintStart_toEndOf="@id/img2"
        android:layout_marginStart="135dp"
        android:layout_marginTop="50dp" />

    <EditText
        android:id="@+id/edt1"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="30dp"
        android:width="320dp"
        android:background="@drawable/button_shape"
        android:ems="10"
        android:fontFamily="@font/titilliumweb_regular"
        android:hint="Enter Your Full Name"
        android:inputType="text"
        android:paddingStart="50dp"
        android:paddingEnd="15dp"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txt5" />

    <EditText
        android:id="@+id/edt2"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="15dp"
        android:width="320dp"
        android:background="@drawable/button_shape"
        android:ems="10"
        android:fontFamily="@font/titilliumweb_regular"
        android:hint="Enter Your Email"
        android:inputType="text"
        android:paddingStart="50dp"
        android:paddingEnd="15dp"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/edt1" />

    <EditText
        android:id="@+id/edt3"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="15dp"
        android:width="320dp"
        android:background="@drawable/button_shape"
        android:ems="10"
        android:fontFamily="@font/titilliumweb_regular"
        android:hint="Create Password"
        android:inputType="textPassword"
        android:paddingStart="50dp"
        android:paddingEnd="15dp"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/edt2" />

    <EditText
        android:id="@+id/edt4"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="15dp"
        android:width="320dp"
        android:background="@drawable/button_shape"
        android:ems="10"
        android:fontFamily="@font/titilliumweb_regular"
        android:hint="Confirm Password"
        android:inputType="textPassword"
        android:paddingStart="50dp"
        android:paddingEnd="15dp"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/edt3" />

    <ImageView
        android:id="@+id/fullname"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/user_register"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/edt1"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginEnd="250dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="5dp"
        />

    <ImageView
        android:id="@+id/email"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/email_register"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/edt2"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginEnd="250dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="5dp"
        />

    <ImageView
        android:id="@+id/password"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:src="@drawable/password_register"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/edt3"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginEnd="250dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="5dp"
        />

    <ImageView
        android:id="@+id/password2"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:src="@drawable/password_register"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/edt4"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginEnd="250dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="5dp"
        />

    <ImageView
        android:id="@+id/img3"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/hide"
        android:layout_marginEnd="15dp"
        app:layout_constraintTop_toTopOf="@id/edt3"
        app:layout_constraintBottom_toBottomOf="@id/edt3"
        app:layout_constraintEnd_toEndOf="@id/edt3"
        android:padding="1dp"
        android:contentDescription="Toggle Password Visibility" />

    <ImageView
        android:id="@+id/img4"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/hide"
        android:layout_marginEnd="15dp"
        app:layout_constraintTop_toTopOf="@id/edt4"
        app:layout_constraintBottom_toBottomOf="@id/edt4"
        app:layout_constraintEnd_toEndOf="@id/edt4"
        android:padding="1dp"
        android:contentDescription="Toggle Password Visibility" />

    <TextView
        android:id="@+id/txt6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Already have an account?"
        android:textSize="15dp"
        android:fontFamily="@font/titilliumweb_semibold"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/img4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="25dp"/>
    <TextView
        android:id="@+id/txt7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign In"
        android:textSize="15dp"
        android:fontFamily="@font/titilliumweb_bold"
        android:textColor="@color/bottom_background"
        app:layout_constraintStart_toEndOf="@id/txt6"
        app:layout_constraintTop_toTopOf="@id/txt6"
        android:layout_marginTop="0dp"
        android:layout_marginStart="5dp"/>
    <Button
        android:id="@+id/btn1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign Up"
        android:width="320dp"
        android:textAllCaps="false"
        android:textSize="18sp"
        android:fontFamily="@font/titilliumweb_semibold"
        android:textColor="@color/button"
        app:layout_constraintTop_toBottomOf="@id/edt4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="50dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="1dp"
        android:background="@drawable/button_shape" />

</androidx.constraintlayout.widget.ConstraintLayout>
