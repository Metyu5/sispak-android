<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity"
    android:background="@color/background">

    <ImageView
        android:id="@+id/img1"
        android:layout_width="60dp"
        android:layout_height="55dp"
        app:srcCompat="?attr/homeAsUpIndicator"
        app:tint="@color/white"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="300dp"
        android:layout_height="280dp"
        android:layout_marginTop="-10dp"
        app:cardCornerRadius="25dp"
        app:cardElevation="10dp"
        app:layout_constraintTop_toBottomOf="@id/img2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- TextView -->
            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="LOGIN"
                android:fontFamily="@font/titilliumweb_bold"
                android:textSize="32sp"
                android:textColor="@color/button"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toTopOf="@id/edt1"
                android:layout_marginBottom="10dp" />

            <!-- EditText -->
            <EditText
                android:id="@+id/edt1"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:width="295dp"
                android:background="@drawable/button_shape_login"
                android:hint="Enter Your Username"
                android:paddingStart="45dp"
                android:textSize="15sp"
                app:layout_constraintTop_toBottomOf="@id/textView"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="1dp" />
            <ImageView
                android:id="@+id/fullname"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/icon_user"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/edt1"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginEnd="250dp"
                android:layout_marginTop="15dp"
                android:layout_marginStart="5dp"
                />
            <EditText
                android:id="@id/edt2"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:width="295dp"
                android:background="@drawable/button_shape_login"
                android:hint="Enter Your Password"
                android:paddingStart="45dp"
                android:textSize="15sp"
                app:layout_constraintTop_toBottomOf="@id/edt1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="10dp"/>
            <ImageView
                android:id="@+id/fullname2"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/lock"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/edt2"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginEnd="250dp"
                android:layout_marginTop="15dp"
                android:layout_marginStart="5dp" />
            <ImageView
                android:id="@+id/img4"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/eye"
                android:layout_marginEnd="15dp"
                android:contentDescription="Toggle Password Visibility"
                app:layout_constraintTop_toTopOf="@id/edt2"
                app:layout_constraintBottom_toBottomOf="@id/edt2"
                app:layout_constraintEnd_toEndOf="@id/edt2"/>
            <Button
                android:id="@+id/btn1"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="Login"
                android:width="295dp"
                android:textAllCaps="false"
                android:textSize="18sp"
                android:fontFamily="@font/titilliumweb_semibold"
                android:textColor="@color/white"
                app:layout_constraintTop_toBottomOf="@id/edt2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="50dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:background="@drawable/btn_login" />



        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <ImageView
        android:id="@+id/img2"
        android:layout_width="243dp"
        android:layout_height="243dp"
        android:src="@drawable/gambar5"
        android:layout_marginTop="-10dp"
        app:layout_constraintTop_toBottomOf="@+id/img1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <ImageView
        android:id="@+id/img3"
        android:layout_width="match_parent"
        android:layout_height="433dp"
        android:layout_marginTop="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/img2"
        app:srcCompat="@drawable/background_login" />

</androidx.constraintlayout.widget.ConstraintLayout>
